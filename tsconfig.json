{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "typings/main",
        "typings/main.d.ts",
        "typings/browser",
        "typings/browser.d.ts",
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/mobx"
    ],
    "compileOnSave": false
}
