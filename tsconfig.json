{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "outDir": "built",
        "rootDir": "src",
        "sourceMap": true
    },
    "filesGlob": [
      "typings/**/*.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
