{
    "compilerOptions": {
        "target": "es2015",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true
    },
    "filesGlob": [
        "typings/index.d.ts",
        "typings/globals/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "typings/main",
        "typings/main.d.ts",
        "typings/browser",
        "typings/browser.d.ts",
        "node_modules"
    ],
    "compileOnSave": false
}
